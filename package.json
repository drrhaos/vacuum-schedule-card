{
  "name": "vacuum-schedule-card",
  "version": "1.0.0",
  "description": "Home Assistant Lovelace card for scheduling vacuum cleaning",
  "main": "vacuum-schedule-card.js",
  "scripts": {
    "build": "rollup -c",
    "build:dev": "rollup -c rollup.config.dev.mjs",
    "watch": "rollup -c --watch",
    "watch:dev": "rollup -c rollup.config.dev.mjs --watch",
    "dev": "npm run watch:dev & npm run serve",
    "serve": "python3 -m http.server 8080 || python -m http.server 8080 || npx http-server -p 8080 -c-1",
    "preview": "npm run build:dev && npm run serve"
  },
  "keywords": [
    "home-assistant",
    "lovelace",
    "card",
    "vacuum",
    "schedule"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^20.0.0",
    "rollup": "^4.53.3",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "custom-card-helpers": "^1.9.0",
    "lit": "^2.8.0"
  }
}
